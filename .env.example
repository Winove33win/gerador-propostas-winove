# =====================
# Backend server
# =====================
PORT=3333
NODE_ENV=development

# =====================
# Auth
# =====================
JWT_SECRET=troque-por-uma-chave-segura
JWT_EXPIRES_IN=7d
SALT_ROUNDS=12
REGISTER_INVITE_TOKEN=
ENABLE_DB_INTROSPECTION=false

# =====================
# Painel comercial (/comercial-propostas)
# =====================
COMMERCIAL_PANEL_USERNAME=
COMMERCIAL_PANEL_PASSWORD=

# =====================
# Auth rate limit
# =====================
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
AUTH_RATE_LIMIT_LOCKOUT_BASE_MS=300000
AUTH_RATE_LIMIT_LOCKOUT_MAX_MS=3600000

# =====================
# Database (MySQL)
# =====================
# Quando o MySQL estiver no mesmo host da aplicação, use 127.0.0.1 ou localhost.
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=propostas
DB_USERNAME=usuario
# Alternativa ao DB_USERNAME:
# DB_USER=usuario
DB_PASSWORD=senha
DB_CONN_LIMIT=10
